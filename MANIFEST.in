# MANIFEST.in - Package distribution manifest for Occupation Data Reports

# Include essential documentation
include README.md
include LICENSE
include CHANGELOG.md
include MANIFEST.in

# Include requirements and setup files
include requirements.txt
include setup.py
include pyproject.toml

# Include deployment files
include Dockerfile
include docker-compose.yml
include deploy.sh

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include configuration files and templates
recursive-include config *.yaml
recursive-include config *.yml
recursive-include config/templates *.html
recursive-include config/templates *.css
recursive-include config/templates *.js

# Include test configuration
recursive-include test_config *.yaml
recursive-include test_config *.yml
recursive-include test_config/templates *.html

# Include source code
recursive-include src *.py
recursive-include src *.yaml
recursive-include src *.yml

# Include tests
recursive-include tests *.py
recursive-include tests *.yaml
recursive-include tests *.json
recursive-include tests/fixtures *.csv
recursive-include tests/fixtures *.json

# Include example data files (if any)
include *.csv
include *.xlsx

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# Exclude build and cache directories
prune build
prune dist
prune .pytest_cache
prune .mypy_cache
prune .coverage
prune htmlcov
prune .tox

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude temporary and log files
global-exclude *.log
global-exclude *.tmp
global-exclude temp
prune logs
prune reports

# Exclude virtual environments
prune venv
prune env
prune .venv